<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.s17er.dev.androiddrawingsample.MainActivity"
    android:background="#000000"
    >

    <LinearLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="horizontal"
        android:padding="8dp"
        >
        <ImageButton
            android:id="@+id/button_pen"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:src="@drawable/pen"
            android:scaleType="fitXY"
            android:background="@color/button_bg_light"
            />
        <ImageButton
            android:id="@+id/button_eraser"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/eraser"
            android:scaleType="fitXY"
            android:background="@color/button_bg_dark"
            />
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:background="@color/color_container_border"
            >
            <ImageButton
                android:id="@+id/button_color"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />
        </FrameLayout>

        <ImageButton
            android:id="@+id/button_backcolor"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/square"
            android:scaleType="fitXY"
            android:background="@color/button_bg_dark"
            />

        <ImageButton
            android:id="@+id/button_bold"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/circle"
            android:scaleType="fitXY"
            android:background="@color/button_bg_dark"
            />
    </LinearLayout>

    <com.s17er.dev.androiddrawingsample.CanvasView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        />

    <LinearLayout
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        >
        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:src="@drawable/undoall"
            android:scaleType="fitXY"
            android:background="@color/button_bg_dark"
            />
        <ImageButton
            android:id="@+id/button_undo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/undo"
            android:scaleType="fitXY"
            android:background="@color/button_bg_dark"
            />
        <ImageButton
            android:id="@+id/button_redo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/redo"
            android:scaleType="fitXY"
            android:background="@color/button_bg_dark"
            />

    </LinearLayout>

</RelativeLayout>
